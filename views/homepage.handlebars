{{#each posts as |post| }}

<div class="row justify-content-evenly">

    <div class="container col-9">

        <div class="card mb-3">

            <h5 class="card-header">{{post.title}}</h5>

            <div class="card-body">
                <p class="card-text">{{post.body}}</p>
            </div>

        </div>

    </div>

</div>

{{/each}}